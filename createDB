import boto3

dynamodb = boto3.resource('dynamodb', region_name='ap-northeast-2')

# 새 테이블 생성
table = dynamodb.create_table(
    TableName='Subtitle',
    KeySchema=[
        {
            'AttributeName': 'link',
            'KeyType': 'HASH'  # 파티션 키
        },
        {
            'AttributeName': 'num',
            'KeyType': 'RANGE'  # 정렬 키
        }
    ],
    AttributeDefinitions=[
        {
            'AttributeName': 'link',
            'AttributeType': 'S'  # 문자열 타입
        },
        {
            'AttributeName': 'num',
            'AttributeType': 'N'  # 숫자 타입
        }
    ],
    ProvisionedThroughput={
        'ReadCapacityUnits': 5,
        'WriteCapacityUnits': 5
    }
)

table.meta.client.get_waiter('table_exists').wait(TableName='NewSubtitleTable')
print("Table has been created.")

